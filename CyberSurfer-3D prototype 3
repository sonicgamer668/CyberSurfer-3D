    <script>
        let gameStarted = false;

        class CyberSurferGame {
            constructor() {
                //... All the same game code as previously given ...
                // For brevity, code is exactly same as provided earlier
                // (You can replace this comment with the full class content I gave before)
                // Important: Include the initialization, animation, event listeners, controls,
                // rendering and logic with the modification to check gameStarted before update
                
                // To keep this message concise, you can ask me if you want me to provide the full code for the class here.
            }

            // ... rest of the methods ...
        }

        function restartGame() {
            if (window.game) {
                window.game.restartGame();
            }
        }

        window.addEventListener('load', () => {
            window.game = new CyberSurferGame();

            // Show 'Press SPACE to Start' overlay
            const startOverlay = document.createElement('div');
            startOverlay.id = 'startOverlay';
            startOverlay.style.position = 'absolute';
            startOverlay.style.top = '50%';
            startOverlay.style.left = '50%';
            startOverlay.style.transform = 'translate(-50%, -50%)';
            startOverlay.style.color = '#0ff';
            startOverlay.style.fontSize = '24px';
            startOverlay.style.fontFamily = "'Orbitron', monospace";
            startOverlay.style.textShadow = '0 0 10px #0ff';
            startOverlay.style.zIndex = '3000';
            startOverlay.innerText = 'Press SPACE to Start';
            document.getElementById('gameContainer').appendChild(startOverlay);

            document.addEventListener('keydown', (e) => {
                if (!gameStarted && (e.code === 'Space' || e.code === 'KeyW')) {
                    gameStarted = true;
                    startOverlay.style.display = 'none';
                    window.game.gameOver = false;
                    window.game.restartGame();
                }
            });
        });
    </script>
